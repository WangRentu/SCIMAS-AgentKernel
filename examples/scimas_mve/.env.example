# NOTE: Structural configs should stay in YAML:
# - configs/simulation_config.yaml (num_episodes/max_ticks)
# - configs/environment_config.yaml / agents_config.yaml / etc.
# Keep only experiment/runtime switches in .env.

# ---------- Runtime ----------
SCIMAS_LOG_MODE=compact

# ---------- Evolution ----------
SCIMAS_EVOLVE_W_INDIV=0.70
SCIMAS_EVOLVE_W_CONTRIB=0.20
SCIMAS_EVOLVE_W_COLLAB=0.10
SCIMAS_TARGET_COLLAB_RATIO=0.15

# ---------- LLM switches ----------
SCIMAS_LLM_ENABLE=1
SCIMAS_LLM_CLAIM_TASK=1
SCIMAS_LLM_HYPOTHESIZE=1
SCIMAS_LLM_EXPERIMENT=1
SCIMAS_LLM_WRITE=1
SCIMAS_LLM_REVIEW=1
SCIMAS_LLM_REPLICATE=1
SCIMAS_LLM_TIMEOUT_S=20
SCIMAS_LLM_LOG_ENABLE=0
SCIMAS_LLM_MAX_CARDS=10
SCIMAS_LLM_MAX_RUNS=8

# Optional: force AIRS script python interpreter
# SCIMAS_AIRS_PYTHON=/home/wangjz/miniforge3/envs/kernel/bin/python
